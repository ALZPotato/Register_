@model MyRegistrationApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Tạo Tài Khoản Mới - The Coffee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .register-page-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 50px 15px;
            min-height: calc(100vh - 200px); /* Điều chỉnh để phù hợp với chiều cao header + footer */
        }

        .register-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px; /* Có thể rộng hơn form login một chút */
            text-align: center;
            border: 1px solid #eae0d1;
        }

            .register-container .register-header h2 {
                font-family: 'Playfair Display', serif;
                color: #4A3B31;
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 2em;
            }

            .register-container .register-header .coffee-icon {
                font-size: 1.5em;
                color: #8B5A2B;
                display: block;
                margin-bottom: 10px;
            }

            .register-container .register-header p.subtitle {
                color: #777;
                margin-bottom: 30px;
            }

        .register-form .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .register-form .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 8px;
                color: #555;
                font-size: 0.9em;
            }

        .register-form .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 1em;
            transition: border-color 0.3s ease;
        }

            .register-form .form-control:focus {
                border-color: #8c6e5a;
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 59, 49, 0.1);
            }

        .register-form .btn-submit {
            background-color: #4a3b31;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1em;
            font-weight: 600;
            width: 100%;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .register-form .btn-submit:hover {
                background-color: #382d26;
            }

        .register-form .text-danger {
            color: #d9534f;
            font-size: 0.85em;
            margin-top: 5px;
        }

        .register-container .extra-links {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #f0f0f0;
            font-size: 0.95em;
        }

            .register-container .extra-links a {
                color: #8B5A2B;
                font-weight: 600;
            }
    </style>
}

<div class="register-page-wrapper">
    <div class="register-container">
        <div class="register-header">
            <span class="coffee-icon"><i class="fas fa-user-plus"></i></span>
            <h2>@ViewBag.Title</h2>
            <p class="subtitle">Tạo tài khoản để khám phá hương vị cà phê độc đáo của chúng tôi.</p>

        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "register-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Tên đăng nhập (ít nhất 3 ký tự)" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu (ít nhất 6 ký tự)" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập họ và tên của bạn" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Business, "Chuyên ngành của bạn")
                @Html.DropDownListFor(m => m.Business, Model.MajorOptions, "-- Chọn chuyên ngành --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Business, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit"><i class="fas fa-check-circle"></i> Đăng Ký Ngay</button>
            </div>
        }

        <div class="extra-links">
            Đã có tài khoản? @Html.ActionLink("Đăng nhập tại đây", "Login", "Account")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval") 
}