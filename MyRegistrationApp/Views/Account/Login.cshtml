@model MyRegistrationApp.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng Nhập The Coffee"; // Thay đổi tiêu đề cho phù hợp
    Layout = null; // Quan trọng: Không sử dụng layout chung
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Coffee</title>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #fdfaf6; /* Màu kem rất nhạt, ấm hơn trắng tinh */
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            line-height: 1.6;
        }

        .login-container { /* Đổi tên class cho phù hợp */
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px; /* Có thể nhỏ hơn trang đăng ký một chút */
            text-align: center;
        }

            .login-container h2 {
                font-family: 'Merriweather', serif;
                color: #4a3b31; /* Màu nâu cà phê đậm */
                margin-top: 0;
                margin-bottom: 15px;
                font-size: 28px;
            }

            .login-container p.subtitle {
                color: #777;
                margin-bottom: 30px;
                font-size: 1em;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 8px;
                color: #555;
                font-size: 0.9em;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 1em;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #8c6e5a; /* Màu nâu cà phê nhạt hơn khi focus */
                outline: none;
                box-shadow: 0 0 0 2px rgba(74, 59, 49, 0.1);
            }

        .checkbox-group { /* Style cho checkbox "Ghi nhớ đăng nhập" */
            text-align: left;
            margin-bottom: 20px;
            font-size: 0.9em;
        }

            .checkbox-group label {
                font-weight: normal;
                color: #555;
                margin-left: 5px;
                cursor: pointer;
            }

            .checkbox-group input[type="checkbox"] {
                vertical-align: middle;
                margin-right: 5px;
            }


        .btn-submit {
            background-color: #4a3b31; /* Màu nâu cà phê đậm */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1em;
            font-weight: 600;
            width: 100%;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background-color: #382d26; /* Nâu đậm hơn khi hover */
            }

        .text-danger, .validation-summary-errors ul {
            color: #d9534f; /* Màu đỏ cho lỗi */
            font-size: 0.85em;
            list-style: none;
            padding-left: 0;
            margin-top: 5px;
        }

        .validation-summary-errors { /* Class này thường được MVC dùng cho summary chung */
            margin-bottom: 15px;
            text-align: left;
            background-color: #f2dede; /* Nền hồng nhạt cho summary lỗi */
            border: 1px solid #ebccd1;
            padding: 10px 15px;
            border-radius: 4px;
        }

            .validation-summary-errors ul {
                margin-bottom: 0;
            }


        .extra-links { /* Cho link "Quên mật khẩu" và "Đăng ký" */
            margin-top: 25px;
            font-size: 0.9em;
        }

            .extra-links a {
                color: #8c6e5a; /* Màu nâu cà phê nhạt */
                text-decoration: none;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                    color: #4a3b31;
                }

            .extra-links .separator {
                margin: 0 10px;
                color: #ccc;
            }

        /* Simple coffee bean icon (optional, can use FontAwesome or SVG for better ones) */
        .coffee-icon::before {
            content: "☕"; /* Hoặc một SVG/ảnh nhỏ */
            font-size: 20px;
            margin-right: 8px;
            color: #4a3b31;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2><span class="coffee-icon"></span>@ViewBag.Title</h2>
        <p class="subtitle">Chào mừng trở lại! Đăng nhập để tiếp tục hành trình cà phê của bạn.</p>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) @* Thông báo lỗi chung, có thể ẩn nếu không cần thiết khi có lỗi field *@
            @* Nếu bạn muốn ValidationSummary hiển thị rõ ràng hơn với style đã thêm: *@
            @* @Html.ValidationSummary(false, "Vui lòng sửa các lỗi sau:", new { @class = "validation-summary-errors" }) *@


            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Tên đăng nhập")
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập của bạn" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Mật khẩu")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group checkbox-group">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, "Ghi nhớ đăng nhập")
            </div>

            <div class="form-group">
                <input type="submit" value="Đăng Nhập" class="btn-submit" />
            </div>

            <div class="extra-links">
                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "Account") @* Bạn sẽ cần tạo action ForgotPassword sau *@
                <span class="separator">|</span>
                @Html.ActionLink("Chưa có tài khoản? Đăng ký ngay!", "Register", "Account")
            </div>
        }
    </div>
</body>
</html>