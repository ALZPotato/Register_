@model MyRegistrationApp.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng Nhập - The Coffee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .login-page-wrapper {
            /* Tạo không gian trên dưới và căn giữa nội dung */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 50px 15px; /* Khoảng cách trên dưới */
            min-height: calc(100vh - 250px); /* Chiều cao tối thiểu = chiều cao màn hình - (header + footer) */
        }

        .login-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px; /* Tăng max-width một chút */
            text-align: center;
            border: 1px solid #eae0d1; /* Thêm border nhẹ nhàng */
        }

            .login-container .login-header h2 {
                font-family: 'Playfair Display', serif;
                color: #4A3B31;
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 2em; /* Điều chỉnh kích thước */
            }

            .login-container .login-header .coffee-icon { /* Style cho icon logo */
                font-size: 1.5em;
                color: #8B5A2B;
                display: block;
                margin-bottom: 10px;
            }

            .login-container .login-header p.subtitle {
                color: #777;
                margin-bottom: 30px;
                font-size: 1em;
            }

        .login-form .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .login-form .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 8px;
                color: #555;
                font-size: 0.9em;
            }

        .login-form .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 1em;
            transition: border-color 0.3s ease;
        }

            .login-form .form-control:focus {
                border-color: #8c6e5a;
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 59, 49, 0.1);
            }

        .login-form .checkbox-group {
            display: flex;
            justify-content: space-between; /* Đẩy "Quên mật khẩu" sang phải */
            align-items: center;
            margin-bottom: 25px;
            font-size: 0.9em;
        }

            .login-form .checkbox-group label {
                font-weight: normal;
                color: #555;
                margin: 0;
                cursor: pointer;
            }

            .login-form .checkbox-group input[type="checkbox"] {
                margin-right: 5px;
                vertical-align: middle;
            }

            .login-form .checkbox-group .forgot-password-link {
                color: #8c6e5a;
                text-decoration: none;
            }

                .login-form .checkbox-group .forgot-password-link:hover {
                    text-decoration: underline;
                }

        .login-form .btn-submit {
            background-color: #4a3b31;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1em;
            font-weight: 600;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .login-form .btn-submit:hover {
                background-color: #382d26;
            }

        .login-form .text-danger {
            color: #d9534f;
            font-size: 0.85em;
            margin-top: 5px;
        }

        .login-container .extra-links {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #f0f0f0;
            font-size: 0.95em;
        }

            .login-container .extra-links a {
                color: #8B5A2B;
                font-weight: 600;
            }
    </style>
}

<div class="login-page-wrapper">
    <div class="login-container">
        <div class="login-header">
            <span class="coffee-icon"><i class="fas fa-coffee"></i></span>
            <h2>@ViewBag.Title</h2>
            <p class="subtitle">Chào mừng trở lại! Đăng nhập để tiếp tục hành trình cà phê của bạn.</p>
        </div>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            @* Hiển thị lỗi chung (ví dụ: "Tên đăng nhập hoặc mật khẩu không đúng") *@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Tên đăng nhập")
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập của bạn" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Mật khẩu")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group checkbox-group">
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div>
                    @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "Account", null, new { @class = "forgot-password-link" })
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit"><i class="fas fa-sign-in-alt"></i> Đăng Nhập</button>
            </div>
        }

        <div class="extra-links">
            Chưa có tài khoản? @Html.ActionLink("Đăng ký ngay!", "Register", "Account")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval") @* Cho client-side validation *@
}