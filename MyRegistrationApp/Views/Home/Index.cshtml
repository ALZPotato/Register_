@model MyRegistrationApp.Models.HomeViewModel
@{
    ViewBag.Title = ViewBag.PageTitle ?? "Trang Chủ - The Coffee";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>@(ViewBag.HeroTitle ?? "Khám Phá Hương Vị Cà Phê Đích Thực")</h1>
            <p>@(ViewBag.HeroSubtitle ?? "Từ những hạt cà phê chất lượng đến dụng cụ pha chế hoàn hảo, The Coffee mang đến trải nghiệm tuyệt vời cho bạn.")</p>
            <a href="@Url.Action("Products", "Home")" class="btn-cta">Khám Phá Ngay</a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="section section-bg-light">
    <div class="container">
        <div class="section-title">
            <h2>Sản Phẩm Nổi Bật</h2>
            <p class="subtitle">Những sản phẩm mới nhất từ The Coffee.</p>
        </div>

        @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
        {
            <div class="product-grid">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="product-card">
                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID })">
                            @if (!string.IsNullOrEmpty(product.ImageFileName))
                            {
                                <img src="@Url.Content("~/Uploads/ProductImages/" + product.ImageFileName)" alt="@product.ProductName">
                            }
                            else
                            {
                                <img src="@Url.Content("~/Content/Images/placeholder-product.png")" alt="Chưa có ảnh">
                            }
                        </a>
                        <div class="product-info">
                            <div>
                                <h4>@product.ProductName</h4>
                                <p class="price">@string.Format("{0:N0} VNĐ", product.Price)</p>
                            </div>
                            <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID })" class="btn-view-product">Xem Chi Tiết</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center">
                <p>Hiện chưa có sản phẩm nổi bật nào để hiển thị. Vui lòng quay lại sau.</p>
            </div>
        }
    </div>
</section>

<!-- About Us Teaser -->
<section class="section">
    <div class="container">
        <div class="about-teaser">
            <div class="about-teaser-image">
                <img src="@Url.Content("~/Content/Images/about-teaser-img.jpg")" alt="Về The Coffee">
            </div>
            <div class="about-teaser-content">
                <div class="section-title" style="text-align:left; margin-bottom:15px;">
                    <h2 style="font-size: 2.1em;">Về The Coffee</h2>
                </div>
                <p>Tại The Coffee, chúng tôi đam mê từng hạt cà phê. Từ việc lựa chọn những hạt cà phê Arabica và Robusta chất lượng nhất từ các vùng trồng uy tín, đến quy trình rang xay thủ công tỉ mỉ, chúng tôi cam kết mang đến cho bạn những trải nghiệm cà phê đích thực.</p>
                <p>Hãy cùng chúng tôi khám phá hành trình từ nông trại đến tách cà phê hoàn hảo.</p>
                <a href="@Url.Action("About", "Home")" class="btn-cta" style="font-size:0.9em; padding: 12px 25px;">Tìm Hiểu Thêm</a>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Bar -->
<section class="cta-bar">
    <div class="container">
        <h3>Tham Gia Cộng Đồng Yêu Cà Phê Của Chúng Tôi</h3>
        <p>Đăng ký nhận bản tin để không bỏ lỡ các ưu đãi đặc biệt và kiến thức thú vị về cà phê.</p>
        <a href="@Url.Action("Register", "Account")" class="btn-cta" style="background-color: #FFF8DC; color:#4A3B31;">Đăng Ký Ngay</a>
    </div>
</section>
@section scripts {
    <script type="text/javascript">
    </script>
}