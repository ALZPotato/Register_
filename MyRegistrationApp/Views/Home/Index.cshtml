@{
    ViewBag.Title = ViewBag.PageTitle ?? "Trang Chủ - The Coffee";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo dòng này được kích hoạt
}

@* TOÀN BỘ HTML BÊN DƯỚI SẼ ĐƯỢC CHÈN VÀO @RenderBody() CỦA _Layout.cshtml *@
@* Không cần <main class="main-content"> ở đây nếu _Layout.cshtml đã có div bao quanh @RenderBody()
    hoặc nếu padding-top cho body trong Site.css đã xử lý việc header che nội dung.
    Nếu Site.css có class .main-content với padding-top, bạn có thể bao bọc nội dung này bằng div đó.
    Giả sử Site.css đã có padding-top cho body, chúng ta có thể bỏ qua .main-content ở đây.
*@

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>@(ViewBag.HeroTitle ?? "Khám Phá Hương Vị Cà Phê Đích Thực")</h1>
            <p>@(ViewBag.HeroSubtitle ?? "Từ những hạt cà phê chất lượng đến dụng cụ pha chế hoàn hảo, The Coffee mang đến trải nghiệm tuyệt vời cho bạn.")</p>
            <a href="@Url.Action("Products", "Home")" class="btn-cta">Khám Phá Ngay</a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="section section-bg-light">
    <div class="container">
        <div class="section-title">
            <h2>Sản Phẩm Nổi Bật</h2>
            <p class="subtitle">Những lựa chọn được yêu thích nhất từ The Coffee.</p>
        </div>
        <div class="product-grid">
            <!-- Product Item 1 -->
            <div class="product-card">
                <img src="@Url.Content("~/Content/Images/product-featured-1.jpg")" alt="Cà Phê Hạt Đặc Biệt">
                <div class="product-info">
                    <div>
                        <h4>Cà Phê Hạt Rang Đặc Biệt</h4>
                        <p class="price">250.000 VNĐ</p>
                    </div>
                    <a href="#" class="btn-view-product">Xem Chi Tiết</a> @* Sửa link sau *@
                </div>
            </div>
            <!-- Product Item 2 -->
            <div class="product-card">
                <img src="@Url.Content("~/Content/Images/product-featured-2.jpg")" alt="Bộ Dụng Cụ Pha Phin">
                <div class="product-info">
                    <div>
                        <h4>Bộ Dụng Cụ Pha Phin Cao Cấp</h4>
                        <p class="price">380.000 VNĐ</p>
                    </div>
                    <a href="#" class="btn-view-product">Xem Chi Tiết</a> @* Sửa link sau *@
                </div>
            </div>
            <!-- Product Item 3 -->
            <div class="product-card">
                <img src="@Url.Content("~/Content/Images/product-featured-3.jpg")" alt="Ly Sứ Giữ Nhiệt">
                <div class="product-info">
                    <div>
                        <h4>Ly Sứ Giữ Nhiệt The Coffee</h4>
                        <p class="price">180.000 VNĐ</p>
                    </div>
                    <a href="#" class="btn-view-product">Xem Chi Tiết</a> @* Sửa link sau *@
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us Teaser -->
<section class="section">
    <div class="container">
        <div class="about-teaser">
            <div class="about-teaser-image">
                <img src="@Url.Content("~/Content/Images/about-teaser-img.jpg")" alt="Về The Coffee">
            </div>
            <div class="about-teaser-content">
                <div class="section-title" style="text-align:left; margin-bottom:15px;">
                    <h2 style="font-size: 2.1em;">Về The Coffee</h2>
                </div>
                <p>Tại The Coffee, chúng tôi đam mê từng hạt cà phê. Từ việc lựa chọn những hạt cà phê Arabica và Robusta chất lượng nhất từ các vùng trồng uy tín, đến quy trình rang xay thủ công tỉ mỉ, chúng tôi cam kết mang đến cho bạn những trải nghiệm cà phê đích thực.</p>
                <p>Hãy cùng chúng tôi khám phá hành trình từ nông trại đến tách cà phê hoàn hảo.</p>
                <a href="@Url.Action("About", "Home")" class="btn-cta" style="font-size:0.9em; padding: 12px 25px;">Tìm Hiểu Thêm</a>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Bar -->
<section class="cta-bar">
    <div class="container">
        <h3>Tham Gia Cộng Đồng Yêu Cà Phê Của Chúng Tôi</h3>
        <p>Đăng ký nhận bản tin để không bỏ lỡ các ưu đãi đặc biệt và kiến thức thú vị về cà phê.</p>
        <a href="@Url.Action("Register", "Account")" class="btn-cta" style="background-color: #FFF8DC; color:#4A3B31;">Đăng Ký Ngay</a>
    </div>
</section>

@* Nếu trang Index cần script riêng, bạn có thể thêm vào đây *@
@section scripts {
    <script type="text/javascript">
        // console.log("Trang Index đã tải script riêng.");
    </script>
}